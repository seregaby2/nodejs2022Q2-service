datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id String @id @default(uuid())
  version Int @default(autoincrement())
  createdAt Int
  updatedAt Int
  login String
  password String
}

model Artist {
  id String @id @default(uuid())
  grammy Boolean @default(false)
  tracks Track[]
  albums Album[]
  name String
  Favorites Favorites? @relation(fields: [favoritesId], references: [id])
  favoritesId Int?
  
}

model Album {
  id       String  @id @default(uuid())
  name     String
  year     Int
  Favorites Favorites? @relation(fields: [favoritesId], references: [id])
  favoritesId Int?
  Artist Artist? @relation(fields: [artistId], references: [id])
  artistId String?
  tracks Track[]
}

model Track {
  id       String  @id @default(uuid())
  name     String
  duration Int
  Artist Artist? @relation(fields: [artistId], references: [id])
  artistId String?
  Favorites Favorites? @relation(fields: [favoritesId], references: [id])
  favoritesId Int?
  Album Album? @relation(fields: [albumId], references: [id])
  albumId  String?
  
}

model Favorites {
  id Int @id @default(0)
  artists Artist[]
  albums Album[]
  tracks Track[]
}
